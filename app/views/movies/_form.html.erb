<%= form_for @movie, html: {multipart: true} do |f| %>
  <% if @movie.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@movie.errors.count, "error") %> prohibited this movie from being saved:</h2>

      <ul>
      <% @movie.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :title %><br>
    <%= f.text_field :title %>
  </div>
  <div class="field">
    <%= f.label :year %><br>
    <%= f.number_field :year %>
  </div>
  <div class="field">
    <%= f.label :box %><br>
    <%= f.number_field :box %>
  </div>
  <div class="field">
    <%= f.label :format %><br>
    <%= f.text_field :format %>
  </div>
  <div class="field">
    <%= f.label :position %><br>
    <%= f.number_field :position %>
  </div>
  <div class="field">
    <%= f.label "Kind" %><br>
    <%= f.select :kind_ids, Kind.all.collect {|x| [x.name, x.id]}, {}, :multiple => true %>
  </div>
  <div class="field">
    <%= f.label "Actor, Director" %><br>
    <%= f.select :person_ids, Person.all.collect {|x| [x.name, x.id]}, {}, :multiple => true %>
  </div>
  <%= image_tag @movie.image.to_s, style: "max-width: 150px" %>
  <div class="field">
    <%= f.label :Foto %>
    <%= f.file_field :image %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
