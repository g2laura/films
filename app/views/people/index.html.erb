<h1>Listing people</h1>

<%= form_tag people_path, :method => 'get' do %>
  <p>
    <%= text_field_tag :name, params[:name], placeholder: "Nombre" %>
    <%= submit_tag "Search" %>
  </p>
<% end %>

<table class="tablesorter tablesorter-default table table-striped">
  <thead>
    <tr>
      <th>Name</th>
      <th>Job</th>
      <th style="width: 15%"></th>
    </tr>
  </thead>

  <tbody>
    <% @people.each do |person| %>
      <tr>
        <td><%= person.name %></td>
        <td><%= person.job %></td>
        <td>
          <%= link_to 'Show', person %> | 
          <%= link_to 'Edit', edit_person_path(person) %> | 
          <%= link_to 'Destroy', person, method: :delete, data: { confirm: 'Are you sure?' } %> | 
          <%= link_to 'Películas', person_movies_path(person) %>
      </tr>
    <% end %>
  </tbody>
</table>

<div id="pager" class="pager">
  <form>
    <%= image_tag "first.png", class: "first" %>
    <%= image_tag "prev.png", class: "prev" %>
    <input type="text" class="pagedisplay"/>
    <%= image_tag "next.png", class: "next" %>
    <%= image_tag "last.png", class: "last" %>
    <select class="pagesize">
      <option value="10">10 por página</option>
      <option value="15">15 por página</option>
      <option value="20">20 por página</option>
    </select>
  </form>
</div>

<br>

<%= link_to 'New Person', new_person_path %><br>
<%= link_to 'Lista de Películas', movies_path %>
